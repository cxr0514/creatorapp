# OAuth Configuration for Social Media Platforms
# Copy this to .env.local and fill in your actual API credentials

# YouTube (Google OAuth)
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here

# TikTok Developer API
TIKTOK_CLIENT_ID=your_tiktok_client_id_here
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret_here

# Instagram Basic Display API
INSTAGRAM_CLIENT_ID=your_instagram_client_id_here
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret_here

# Twitter API v2
TWITTER_CLIENT_ID=your_twitter_client_id_here
TWITTER_CLIENT_SECRET=your_twitter_client_secret_here

# LinkedIn API
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here

# Encryption key for storing tokens securely
OAUTH_ENCRYPTION_KEY=your_32_character_encryption_key_here

# Next Auth Configuration (required for OAuth redirects)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Background job configuration
ENABLE_BACKGROUND_JOBS=true
JOB_PROCESSING_INTERVAL=60000  # 1 minute in milliseconds
